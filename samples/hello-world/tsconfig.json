{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "outDir": "build/src",
        "experimentalDecorators": true,
        "jsx": "react",
        "sourceMap": false,
        "strictNullChecks": true,
        "baseUrl": ".",
        "paths": {
            "*": [
                "*",
                "*.ios",
                "*.android"
            ]
        },
        "skipLibCheck": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ],
    "compileOnSave": true
}
