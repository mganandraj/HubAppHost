{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "outDir": "dist",
        "experimentalDecorators": true,
        "jsx": "react",
        "sourceMap": false,
        "strictNullChecks": true,
        "baseUrl": ".",
        "paths": {
            "*": [
                "*",
                "*.ios",
                "*.android"
            ]
        },
        "allowJs": true,
        "checkJs": false,
        "skipLibCheck": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/tools/**/*.js"
    ],
    "exclude": [
        "node_modules",
        "**/__mocks__/*"
    ],
    "compileOnSave": true
}
